<div class="container" style="background-image: url('/styles/images/background.jpg');">

<div class="title">
        <br>

        <h1 class="display-4 text-center">{{header}}</h1>
        <h2 class="text-center">Make a meal with the ingedients in your pantry</h2>
        <br>

    </div>

<a href="/pantry/manage" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Pantry</a>


<div class="row recipes">
  {{#each data}}
  <div class="col-sm-12 recipe-item">
    <img src={{image}} alt="recipe-image">

    <div class="recipes-used-ingredients">
      <h4>{{title}}</h4>
      <ul>
        <h6>Items you have:</h6>
      </ul>
      {{#each this.usedIngredients}}
      <li>{{name}}</li>
      {{/each}}
    </div>

    <div class="recipes-used-ingredients">
      <ul>
        <h6>Items you need:</h6>
      </ul>
      {{#each this.missedIngredients}}
      <li>{{name}}</li>
      {{/each}}
    </div>
  </div>
  {{/each}}
</div>
</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/recipes.js"></script>